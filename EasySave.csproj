<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
	<UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <ItemGroup>
    <Page Remove="i18N\MainWindow.en-US.xaml" />
    <Page Remove="i18N\MainWindow.fr-FR.xaml" />
    <Page Remove="i18N\Settings.en-US.xaml" />
    <Page Remove="i18N\Settings.fr-FR.xaml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="i18N\Settings.fr-FR.xaml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <SubType>Designer</SubType>
      <Generator></Generator>
    </Content>
    <Content Include="i18N\Settings.en-US.xaml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <SubType>Designer</SubType>
      <Generator></Generator>
    </Content>
    <Content Include="i18N\MainWindow.fr-FR.xaml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <SubType>Designer</SubType>
      <Generator></Generator>
    </Content>
    <Content Include="i18N\MainWindow.en-US.xaml">
      <Generator></Generator>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup> 

</Project>
